#include<stdio.h>
int Idigit(int);
main()
{
	char ch;
	printf("enter the character to be checked = ");
	scanf("%c",&ch);
	int d=Idigit((int)ch);
	if(d==1)
	printf("the character is an alphabet");
	else 
	printf("the character is a digit");
}
int Idigit(int x)
{
	if(x>=0&&x<=9)
	return 0;
	else
	return 1;
}
